<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ul.fc.css.soccernowfx.controller.GameCancelController" hgap="10" vgap="12" alignment="CENTER">
    <Label text="Cancelar Jogo de Campeonato" GridPane.columnSpan="2" style="-fx-font-size:18; -fx-font-weight:bold;" />
    <Label text="ID do Jogo:" GridPane.rowIndex="1" />
    <TextField fx:id="gameIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="Cancelar Jogo" onAction="#handleCancel" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label fx:id="infoLabel" textFill="blue" GridPane.rowIndex="3" GridPane.columnSpan="2" />
</GridPane>
