<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ul.fc.css.soccernowfx.controller.GameResultController" hgap="10" vgap="12" alignment="CENTER">
    <Label text="Registar Resultado de Jogo" GridPane.columnSpan="2" style="-fx-font-size:18; -fx-font-weight:bold;" />
    <Label text="ID do Jogo:" GridPane.rowIndex="1" />
    <TextField fx:id="gameIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Resultado (placar):" GridPane.rowIndex="2" />
    <TextField fx:id="scoreField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="ex: 3-2" />
    <Label text="Equipa Vencedora:" GridPane.rowIndex="3" />
    <TextField fx:id="winnerField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Cartões (email:tipo, vírgula):" GridPane.rowIndex="4" />
    <TextField fx:id="cardsField" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="ex: user@email.com:amarelo" />
    <Button text="Registar Resultado" onAction="#handleRegister" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Label fx:id="infoLabel" textFill="blue" GridPane.rowIndex="6" GridPane.columnSpan="2" />
    <Button text="Voltar ao Menu" onAction="#handleBack" GridPane.rowIndex="7" GridPane.columnIndex="1" />
</GridPane>
