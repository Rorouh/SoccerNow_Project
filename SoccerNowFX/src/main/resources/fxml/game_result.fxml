<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="pt.ul.fc.css.soccernowfx.controller.GameResultController"
          hgap="10" vgap="12" alignment="CENTER">

    <Label text="Registrar Resultado de Partido"
           GridPane.columnSpan="2"
           style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <!-- ─── Campos ─────────────────────────────── -->
    <Label text="ID del Partido:" GridPane.rowIndex="1"/>
    <TextField fx:id="gameIdField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Resultado (marcador):" GridPane.rowIndex="2"/>
    <TextField fx:id="scoreField"
               GridPane.rowIndex="2" GridPane.columnIndex="1"
               promptText="p. ej.: 2-1"/>

    <!-- ─── Botones ────────────────────────────── -->
    <Button text="Registrar Resultado"
            onAction="#handleRegister"
            GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label fx:id="infoLabel" textFill="blue"
           GridPane.rowIndex="4" GridPane.columnSpan="2"/>

    <Button text="Volver al Menú"
            onAction="#handleBack"
            GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
