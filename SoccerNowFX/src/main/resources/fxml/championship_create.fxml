<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="pt.ul.fc.css.soccernowfx.controller.ChampionshipCreateController" hgap="10" vgap="12" alignment="CENTER">
    <Label text="Creación de Campeonato" GridPane.columnSpan="2" style="-fx-font-size:18; -fx-font-weight:bold;" />
    <Label text="Nombre:" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Modalidad:" GridPane.rowIndex="2" />
    <TextField fx:id="modalityField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="p. ej.: puntos" />
    <Label text="Formato:" GridPane.rowIndex="3" />
    <TextField fx:id="formatField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Equipos participantes (nombres, coma):" GridPane.rowIndex="4" />
    <TextField fx:id="teamsField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Label text="Árbitros certificados (emails, coma):" GridPane.rowIndex="5" />
    <TextField fx:id="refereesField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Button text="Crear Campeonato" onAction="#handleCreate" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    <Label fx:id="infoLabel" textFill="blue" GridPane.rowIndex="7" GridPane.columnSpan="2" />
    <Button text="Volver al Menú" onAction="#handleBack" GridPane.rowIndex="8" GridPane.columnIndex="1" />
</GridPane>